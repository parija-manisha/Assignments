@model List<AirportFuelInventory.Models.ReportSummary>

<!DOCTYPE html>
<html>
<head>
    <title>Available Fuel Report</title>
</head>
<body>
    <h2>Available Fuel Report</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Airport ID</th>
                <th>Airport Name</th>
                <th>Available Fuel</th>
            </tr>
        </thead>
        <tbody>
            @{
                var count = (Model.First().CurrentPage - 1) * 10 + 1;

                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AirportId</td>
                        <td>@item.AirportName</td>
                        <td>@item.AvailableFuel</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div id="pagination_v2" class="mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Dashboard", "Dashboard", new { page = Model.First().CurrentPage - 1, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= Model.First().TotalPages; i++)
                {
                    <li class="page-item @(i == Model.First().CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("UserList_v2", "UserList_v2", new { page = i, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })">@i</a>
                    </li>
                }

                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Dashboard", "Dashboard", new { page = Model.First().CurrentPage + 1, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <button id="exportPdf">Export to PDF</button>
</body>
</html>
