@model AirportFuelInventory.Models.Model.UserDTO

@{
    ViewBag.Title = "Login";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p style="color: red;">@ViewBag.ErrorMessage</p>
}

<div class="m-5">
    <div class="border rounded">
        <div class="d-flex align-items-center">
            <img src="~/Images/airport.jpg" class="img-fluid pe-5" />
            <div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mt-2 mb-2 rounded" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control mt-2 mb-2" })
                    </div>

                    <button class="btn btn-primary">Login</button>
                    @Html.ActionLink("New User", "SignUp", "SignUp", null, new { @class = "btn btn-primary" })
                }

            </div>
        </div>
    </div>
</div>
