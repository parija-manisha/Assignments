@model List<DemoUserManagement.Models.UserDetailDTO>

@{
    Layout = "~/Views/Shared/_Layout_v2.cshtml";
}

@{
    ViewBag.Title = "UserList";
}

<table id="UserListTable_v2" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.ActionLink("Sl.No", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "Name", sortDirection = ViewBag.SortColumn == "Name" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("Name", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "Name", sortDirection = ViewBag.SortColumn == "Name" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("Gender", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "Gender", sortDirection = ViewBag.SortColumn == "Gender" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("Email", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "Email", sortDirection = ViewBag.SortColumn == "Email" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("Phone Number", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "PhoneNumber", sortDirection = ViewBag.SortColumn == "PhoneNumber" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("DOB", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "DOB", sortDirection = ViewBag.SortColumn == "DOB" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("Father Name", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "FatherName", sortDirection = ViewBag.SortColumn == "FatherName" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th>@Html.ActionLink("Mother Name", "UserList_v2", new { page = Model.First().CurrentPage, sortColumn = "MotherName", sortDirection = ViewBag.SortColumn == "MotherName" && ViewBag.SortDirection == "ASC" ? "DESC" : "ASC" })</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var count = (Model.First().CurrentPage - 1) * 10 + 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@(user.FirstName + " " + user.MiddleName + " " + user.LastName)</td>
                    <td>@user.Gender</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.DateOfBirth.ToShortDateString()</td>
                    <td>@user.FatherName</td>
                    <td>@user.MotherName</td>
                    <td><a href="@Url.Action("UserDetail_v2", "Registration_v2", new { UserID = user.UserID })">Edit</a></td>
                </tr>
            }
        }
    </tbody>
</table>

<div id="pagination_v2" class="mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            <li class="page-item">
                <a class="page-link" href="@Url.Action("UserList_v2", "UserList_v2", new { page = Model.First().CurrentPage - 1, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.First().TotalPages; i++)
            {
                <li class="page-item @(i == Model.First().CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("UserList_v2", "UserList_v2", new { page = i, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })">@i</a>
                </li>
            }

            <li class="page-item">
                <a class="page-link" href="@Url.Action("UserList_v2", "UserList_v2", new { page = Model.First().CurrentPage + 1, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
