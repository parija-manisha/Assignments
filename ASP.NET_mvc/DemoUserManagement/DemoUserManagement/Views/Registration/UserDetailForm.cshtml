@{
    ViewBag.Title = "User Details";
    var userSession = DemoUserManagement.Util.Constants.GetSessionDetail();
    int userId = userSession?.UserId ?? 0;
    ViewBag.ObjectType = DemoUserManagement.Util.Constants.ObjectType.UserDetail;
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p style="color: red;">@ViewBag.ErrorMessage</p>
}

<h2>User Details</h2>
@using (Html.BeginForm("NewUser", "Registration", FormMethod.Post, new { id = "UserDetailForm" }))
{
    <div id="UserInformation" class="d-flex">
        <div id="PnlPersonalDetails" class="w-50">
            <h3>PERSONAL DETAILS</h3>
            <hr />
            <div>
                <div id="DivTxtFirstName" class="pb-3">
                    <label for="TxtFirstName" class="pe-2 w-25">First Name</label>
                    <input type="text" id="TxtFirstName" name="FirstName" class="w-100">
                </div>
            </div>
            <div>
                <div id="DivMiddleName" class="pb-3">
                    <label for="TxtMiddleName" class="pe-2 w-25">Middle Name</label>
                    <input type="text" id="TxtMiddleName" name="MiddleName" class="w-100">
                </div>
            </div>
            <div>
                <div id="DivLastName" class="pb-3">
                    <label for="TxtLastName" class="pe-2 w-25">Last Name</label>
                    <input type="text" id="TxtLastName" name="LastName" class="w-100">
                </div>
            </div>
            <div>
                <div id="DivGender" class="pb-3">
                    <label for="TxtGender" class="pe-2 w-25">Gender</label>
                    <input type="text" id="TxtGender" name="Gender" class="w-100">
                </div>
            </div>
            <div>
                <div id="DivEmailID" class="pb-3">
                    <label for="TxtEmailID" class="pe-2 w-25">Email ID</label>
                    <input type="email" id="TxtEmailID" name="Email" class="w-100" oninput="isEmailExists(); return false;">
                </div>
            </div>
            <div>
                <div id="DivPassword" class="pb-3">
                    <label for="TxtPassword" class="pe-2 w-25">Password</label>
                    <input type="text" id="TxtPassword" name="Password" class="w-100">
                </div>
            </div>
            <div>
                <div id="DivConfirmPassword" class="pb-3">
                    <label for="TxtConfirmPassword" class="pe-2 w-25">Confirm Password</label>
                    <input type="text" id="TxtConfirmPassword" name="ConfirmPassword" class="w-100">
                </div>
            </div>
            <div>
                <div id="DivPhoneNumber" class="pb-3">
                    <label for="TxtPhone" class="pe-2 w-25">Phone Number</label>
                    <input type="text" id="TxtPhone" class="w-100" name="PhoneNumber">
                </div>
            </div>
            <div>
                <div id="DivDateOfBirth" class="pb-3">
                    <label for="TxtDateOfBirth" class="pe-2 w-25">Date Of Birth</label>
                    <input type="date" id="TxtDateOfBirth" class="w-100" name="DateOfBirth">
                </div>
            </div>
            <div>
                <div id="DivFatherName" class="pb-3">
                    <label for="TxtFatherName" class="pe-2 w-25">Father Name</label>
                    <input type="text" id="TxtFatherName" class="w-100" name="FatherName">
                </div>
            </div>
            <div>
                <div id="DivTxtMotherName" class="pb-3">
                    <label for="TxtMotherName" class="pe-2 w-25">Mother Name</label>
                    <input type="text" id="TxtMotherName" class="w-100" name="MotherName">
                </div>
            </div>

            <div id="AddRoleToUser" class="pt-5">
                <label for="DdlAddRole" class="pe-2 w-25">Add Roles</label>
                <select id="DdlAddRole" class="w-100">
                </select>
            </div>

            <div class="pt-5">
                <button id="SaveUserButton" class="w-25">Save User</button>
                <button id="DeleteUserButton" class="w-25">Delete User</button>
            </div>
        </div>

        <div id="PnlAddress" class="w-50">
            <div>
                <h3>PERMANENT ADDRESS</h3>
                <hr />

                <div>
                    <div id="DivPermanentCountry" class="pb-3">
                        <label for="DdlPermanentCountry" class="pe-2 w-25">Country</label>
                        @Html.DropDownList("PermanentAddress.CountryID", ViewBag.Countries as SelectList, "--", new { @class = "w-100", @id = "DdlPermanentCountry" })
                    </div>
                </div>

                <div>
                    <div id="DivPermanentState" class="pb-3">
                        <label for="DdlPermanentState" class="pe-2 w-25">State</label>
                        @Html.DropDownList("PermanentAddress.StateID", ViewBag.States as SelectList, "--", new { @class = "w-100", @id = "DdlPermanentState" })
                    </div>
                </div>
                <div>
                    <div id="DivPermanentCity" class="pb-3">
                        <label for="TxtPermanentCity" class="pe-2 w-25">City</label>
                        <input type="text" id="TxtPermanentCity" class="w-100" name="PermanentAddress.City">
                    </div>
                </div>
                <div>
                    <div id="DivPermanentPincode" class="pb-3">
                        <label for="TxtPermanentPincode" class="pe-2 w-25">Pincode</label>
                        <input type="text" id="TxtPermanentPincode" class="w-100" name="PermanentAddress.Pincode">
                    </div>
                </div>
                <div>
                    <div id="DivPermanentAddressLine" class="pb-3">
                        <label for="TxtPermanentAddressLine" class="pe-2 w-25">Address Line</label>
                        <input type="text" id="TxtPermanentAddressLine" class="w-100" name="PermanentAddress.Street">
                    </div>
                </div>
            </div>
            <div>
                <h3>PRESENT ADDRESS</h3>
                <hr />
                <input type="checkbox" id="SameAsPermanent">Same As Permanent Address
                <div>
                    <div id="DivPresentCountry" class="pb-3">
                        <label for="DdlPresentCountry" class="pe-2 w-25">Country</label>
                        @Html.DropDownList("PresentAddress.CountryID", ViewBag.Countries as SelectList, "--", new { @class = "w-100", @id = "DdlPresentCountry" })

                    </div>
                </div>
                <div>
                    <div id="DivPresentState" class="pb-3">
                        <label for="DdlPresentState" class="pe-2 w-25">State</label>
                        @Html.DropDownList("PresentAddress.StateID", ViewBag.States as SelectList, "--", new { @class = "w-100", @id = "DdlPresentState" })
                    </div>
                </div>
                <div>
                    <div id="DivPresentCity" class="pb-3">
                        <label for="TxtPresentCity" class="pe-2 w-25">City</label>
                        <input type="text" id="TxtPresentCity" class="w-100" name="PresentAddress.City">
                    </div>
                </div>
                <div>
                    <div id="DivPresentPincode" class="pb-3">
                        <label for="TxtPresentPincode" class="pe-2 w-25">Pincode</label>
                        <input type="text" id="TxtPresentPincode" class="w-100" name="PresentAddress.Pincode">
                    </div>
                </div>
                <div>
                    <div id="DivPresentAddressLine" class="pb-3">
                        <label for="TxtPresentAddressLine" class="pe-2 w-25">Address Line</label>
                        <input type="text" id="TxtPresentAddressLine" class="w-100" name="PresentAddress.Street">
                    </div>
                </div>
            </div>
            <div id="DivDocumentDropDown" class="pb-3">
                <label for="DocumentDropDown" class="pe-2 w-25">Select Document</label>
                @Html.DropDownList("Document", ViewBag.Documents as SelectList, "--", new { @class = "w-100", @id = "DocumentDropDown" })
            </div>
            <div>
                <input type="file" name="file" />
                <input type="button" value="Upload" id="UploadButton" />
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/Note_And_Download_View/_Note.cshtml")
    @Html.Partial("~/Views/Note_And_Download_View/_Document.cshtml")
}
