@{
    Layout = null;
}

@{
    var pageName = ViewBag.ObjectType;
    var userSession = DemoUserManagement.Util.Constants.GetSessionDetail();
    int userId = userSession != null ? userSession.UserId : 0;
}

<div id="Note" class="container mt-5">
    <div class="row">
        <div>
            <div class="row">
                <textarea id="AddNote" class="form-control" rows="4" placeholder="Enter Your Note"></textarea>
            </div>
            <label id="AddSuccess" class="text-success mt-2"></label>
        </div>
    </div>
    <br />
    <div>
        @{
            bool hasRecords = DemoUserManagement.Business.NoteLogic.CountNote(userId, pageName) > 0;
            if (hasRecords)
            {
                <table id="NoteListTable" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Sl.No</th>
                            <th>Object ID</th>
                            <th>Page Name ID</th>
                            <th>Note</th>
                            <th>Entered At</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            }
            else
            {
                <p>No Records Found!!</p>
            }
        }
    </div>
</div>
